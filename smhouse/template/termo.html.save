{% extends 'main.html' %}


{% block content %}

{% if mobile_browser == False %}
<script>
$(document).ready(function(){
  if ($("body").height()+70 > $(window).height()) { $("#back_to_top").show(); $("#go_to_bottom").show(); $("#footer").show(); }
  $("#back_to_top").click(function(){ $("html, body").animate({ scrollTop: 0 }, 2000); })
  $("#go_to_bottom").click(function(){ $("html, body").animate({ scrollTop: $("body").height() }, 2000); })
})
</script>
{% endif %}

{% if mobile_browser %}
<div class="col-xs-12 col-sm-12" id="jobs-menu">
 <div class="nav-side-menu">
  <div style="height: 50px; width:100%;"></div>
  <i class="fa fa-bars fa-2x toggle-btn" data-toggle="collapse" data-target="#jobs-content"></i>
  <div class="jobs-list">
   <ul id="jobs-content" class="menu-content collapse out">
{% else %}
<div class="container-fluid">
 <div class="navbar-collapse">
  <ul class="nav nav-tabs">
{% endif %}

{% for a in adress %}
   <li{% if a.order == 1 %} class="active"{% endif %}><a data-toggle="tab" href="#{{ a.slug }}">{{ a.adress }}</a></li>
{% endfor %}
  </ul>
 </div>
</div>

<div class="tab-content">
{% for a in adress %}
  <div id="{{ a.slug }}" class="tab-pane fade{% if a.order == 1 %} in active{% endif %}">
    <h3>{{ a.adress }}</h3>
{% if a.order == 1 %}<a target="_blank" href="https://svabis.eu/adminlucy/smhouse/termoreading/"><h1>TE IR TAVA TABULIŅA (PAGAIDĀM "VIRTUVĒ")</h1></a>{% endif %}

{% if a.order == 1 %}
.parent {
  position: relative;
  top: 0;
  left: 0;
}
<img class="termo_img" src="/media/ktc_back.png">
<img class="termo_img termo_layer" src="/media/ktc_layer_2.png">
<img class="termo_img termo_layer" src="/media/ktc_layer_3.png">
<img class="termo_img termo_layer" src="/media/ktc_layer_4.png">

{# {% for p in p2 %}{{ p }}<br>{% endfor %} #}

{% endif %}
  </div>
{% endfor %}
</div>

{% if mobile_browser %}</div>{% endif %}

<div class="container" style="margin-top:10px;"></div>

<div id="footer" class="container-fluid"></div>
 <button id="back_to_top" type="button" class="btn btn-warning">
  <span class="glyphicon glyphicon-open" aria-hidden="true"> </span> Uz lapas augšu</button>
 <button id="go_to_bottom" type="button" class="btn btn-warning">
  <span class="glyphicon glyphicon-save" aria-hidden="true"> </span> Uz lapas leju</button>
{% endblock %}



{% block style %}
   .termo_img   { position: relative; top: 0; left: 0; width: 100%; border: solid red 1px; }
   .termo_layer { position: absolute; top: 0; left: 0; }

   textarea { resize: none; }

   .table td.fit, .table th.fit { width: 1%; text-align:center; }

   #back_to_top { color: #222; border-color: #555; display: none; bottom: 47px; right: 30px; position: fixed; min-width: 160px; }
   #go_to_bottom { color: #222; border-color: #555; display: none; bottom: 10px; right: 30px; position: fixed; min-width: 160px; }
   #footer { display:none; height: 72px;}

   .table-hover tbody tr:hover td, .table-hover tbody tr:hover th { background-color: #9b9da0; }
   .table.table > thead > tr > th { vertical-align:top }

   a { color: #000; }

   .nav-tabs > li > a{ color: #000; background-color: #ffffb3; }
   .nav-tabs > li > a:hover{ background-color: #ccc !important; color:#fff; }

{# NOT SURE ABOUT NEXT ONE #}
/*   .tab-content{ background-color:#303136; color:#fff; padding:5px } */
{% endblock %}

